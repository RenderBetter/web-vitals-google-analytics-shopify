{
    "compilerOptions": {
      "module": "commonjs",
      "sourceMap": true,
      "strict": true,
      "target": "ES2015",
      "lib": ["esnext", "DOM"],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "removeComments": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noImplicitAny": true,
      "jsx": "react",
      "types": [],
      "noImplicitReturns": true,
      "outDir": "./dist",
    },
    "include": ["src"],
	"exclude": ["node_modules", "dist", "test"]
  }